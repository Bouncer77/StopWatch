<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bouncer77.firetime">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.bouncer77.firetime.SpecialThanksActivity"
            android:parentActivityName="com.bouncer77.firetime.MainActivity"/>
        <activity android:name="com.bouncer77.firetime.AboutActivity"
            android:parentActivityName="com.bouncer77.firetime.MainActivity"/>
        <activity android:name="com.bouncer77.firetime.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"
                    android:label="@string/title_stopWatch"/>

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.bouncer77.firetime.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.bouncer77.firetime.MainActivity"/>
        <activity
            android:name="com.bouncer77.firetime.SupportActivity"
            android:label="@string/title_activity_support"
            android:parentActivityName="com.bouncer77.firetime.MainActivity" />
    </application>

</manifest>