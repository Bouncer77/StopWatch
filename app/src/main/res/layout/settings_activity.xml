<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorOrange">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:textColor="@color/colorDark">

        <include
            layout="@layout/toolbar_main"
            android:id="@+id/toolbar"/>

        <TextView
            android:id="@+id/textViewChooseLanguage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="@string/choose_language"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:textColor="@color/colorDark"/>

        <Spinner
            android:id="@+id/spinnerLanguage"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:entries="@array/spiner_select_language"
            android:layout_marginBottom="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Switch
            android:id="@+id/switchBackground"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/switch_background_act" />

        <Switch
            android:id="@+id/switchPause"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/switch_paused_act" />

        <Switch
            android:id="@+id/switchMilliseconds"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/swith_milliseconds_act" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:text="@string/number_millisec_delta" />

            <EditText
                android:id="@+id/editTextNumMilliseconds"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="@string/number_millisecond_hint"
                android:maxLength="3"
                android:inputType="number"
                android:hint="@string/number_millisecond_hint"
                android:importantForAutofill="no" />

        </LinearLayout>

        <Button
            android:id="@+id/button"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:background="@color/colorOrange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickApplySettings"
            android:textStyle="bold"
            android:text="@string/button_apply_settings" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageButtonAutor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/settings_about_author"
                android:onClick="onClickAutor"
                app:srcCompat="@drawable/baseline_copyright_24" />

            <ImageButton
                android:id="@+id/imageButtonSupport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/settings_support"
                android:onClick="onClickSupport"
                app:srcCompat="@drawable/baseline_announcement_24" />

            <ImageButton
                android:id="@+id/imageButtonVote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/settings_vote"
                android:onClick="onClickVote"
                app:srcCompat="@drawable/baseline_favorite_24" />

            <ImageButton
                android:id="@+id/imageButtonShare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/settings_share"
                android:onClick="onClickShare"
                app:srcCompat="@drawable/baseline_share_24" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>